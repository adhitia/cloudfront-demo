<div class="animationload">
  <div class="loader"></div>
</div>

<div class="account-pages"></div>
<div class="clearfix"></div>

<div class="wrapper-page">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"> Login to Hacktiv8's Den</h3>
    </div>

    <div class="panel-body">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "form-horizontal"}) do |f| %>

        <div class="form-group ">
          <div class="col-xs-12">
            <label><%= t('email') %></label>
            <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email"  %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-xs-12">
            <label><%= t('password') %></label>
            <%= f.password_field :password, class: "form-control", placeholder: "Password"  , autocomplete: "off" %>
          </div>
        </div>

        <div class="form-group text-center m-t-40">
          <div class="col-xs-12">
            <button class="btn btn-default btn-block btn-lg waves-effect waves-light" type="submit">
              Login
            </button>
          </div>
        </div>>

     <% end %>

   </div>
 </div>
</div>
